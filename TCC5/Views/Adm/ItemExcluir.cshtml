<!DOCTYPE html>
@{
    ViewBag.Title = "Excluir Item";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir Item</title>
</head>
@{
    var Item = ViewBag.Item;
}
<body>
    <div>
        <form class="row col-lg-3" action="/Adm/ExcluirItem" method="post">
            <h2 style="font-family: Impact; color: #0B5345">Excluir Item</h2>

            <div class="col-lg-12">
                <input type="hidden" id="id" name="id" value="@Item.Id" />
                <label for="nome" class="form-label">Nome</label>
                <input type="text" id="nome" name="nome" class="form-control" readonly value="@Item.Nome" />
            </div>
            <div class="col-lg-12">
                <label for="tipo_id" class="form-label">Numero do item</label>
                <input type="text" id="tipo_id" name="tipo_id" class="form-control" readonly value="@Item.Tipo_Id" />
            </div>
            <div class="col-lg-12">
                <label for="descricao" class="form-label">Descrição do Item</label>
                <input type="text" id="descricao" name="descricao" class="form-control" readonly value="@Item.Descricao"/>
            </div>
            <div class="col-lg-12">
                <label for="valor" class="form-label">Valor do Item</label>
                <input type="text" id="valor" name="valor" class="form-control" readonly value="@Item.Valor" />
            </div>
            <div class="col-lg-12">
                <label for="dataI" class="form-label">Data</label>
                <input type="datetime-local" id="dataI" name="dataI" class="form-control" readonly value="@Item.Data"/>
            </div>

            <div class="col-lg-12">
                <br />
                <button class="btn btn-success" type="submit"> Salvar</button>
            </div>

        </form>

    </div>
</body>
</html>



<!DOCTYPE html>
@{
    ViewBag.Title = "Adicionar Pedido";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adicionar Pedido</title>
</head>
<body>
    <div>
        <form class="row col-lg-3" action="/Adm/SalvarPedido" method="post">
            <h2 style="font-family: Impact; color: #0B5345">Adicionar Pedido</h2>

            <div class="col-lg-12">
                <label for="comanda_id" class="form-label">Comanda id</label>
                <input type="text" id="comanda_id" name="comanda_id" class="form-control" />
            </div>
           
            <div class="col-lg-12">
                <label for="data" class="form-label">Data</label>
                <input type="datetime-local" id="data" name="data" class="form-control" />
            </div>

            <div class="col-lg-12">
                <br />
                <button class="btn btn-success" type="submit"> Salvar</button>
            </div>

        </form>

    </div>
</body>
</html>



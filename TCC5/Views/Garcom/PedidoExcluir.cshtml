<!DOCTYPE html>
@{
    ViewBag.Title = "Excluir Pedido";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir Pedido</title>
</head>
@{
    var Pedido = ViewBag.Pedido;
}
<body>
    <div>
        <form class="row col-lg-3" action="/Garcom/ExcluirPedido" method="post">
            <h2 style="font-family: Impact; color: #0B5345">Excluir Pedido</h2>

            <div class="col-lg-12">
                <input type="hidden" id="id" name="id" readonly value="@Pedido.Id" />
                <label for="comanda_id" class="form-label">Comanda id</label>
                <input type="text" id="comanda_id" name="comanda_id" class="form-control" readonly value="@Pedido.Comanda_id" />
            </div>

            <div class="col-lg-12">
                <label for="data" class="form-label">Data</label>
                <input type="datetime-local" id="data" name="data" class="form-control" readonly value="@Pedido.Data" />
            </div>

            <div class="col-lg-12">
                <br />
                <button class="btn btn-success" type="submit"> Salvar</button>
            </div>

        </form>

    </div>
</body>
</html>



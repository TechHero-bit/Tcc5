<!DOCTYPE html>
@{
    ViewBag.Title = "Excluir Couvert";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Excluir Couvert</title>
</head>
@{
    var Couvert = ViewBag.Couvert;
}
<body>
    <div>
        <form class="row col-lg-3" action="/Garcom/ExcluirCouvert" method="post">
            <h2 style="font-family: Impact; color: #0B5345">Excluir Couvert</h2>

            <div class="col-lg-12">
                <input type="hidden" id="id" name="id" readonly value="@Couvert.Id" />
                <label for="valor" class="form-label">Valor</label>
                <input type="text" id="valor" name="valor" class="form-control" readonly value="@Couvert.Valor" />
            </div>

            <div class="col-lg-12">
                <label for="data" class="form-label">Data</label>
                <input type="datetime-local" id="data" name="data" class="form-control" value="@Couvert.Data" />
            </div>

            <div class="col-lg-12">
                <br />
                <button class="btn btn-success" type="submit"> Salvar</button>
            </div>

        </form>

    </div>
</body>
</html>
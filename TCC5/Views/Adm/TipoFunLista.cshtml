
@{
    ViewBag.Title = "TipoFunLista";
}

<h2>TipoFunLista</h2>

<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>Id</th>
        <th>Id Setor</th>
        <th>Nome</th>
        <th>Setor</th>
    </tr>

    @foreach (var item in ViewBag.Tpfc)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Id_setor</td>
    <td>@item.Nome</td>
    <td>@item.Setor</td>
    <td>
        <a class="link" href="/Adm/TipoFuncAlterar/@item.Id"> Alterar Tipo de Funcionario</a>
    </td>
    <td>
        <a class="link" href="/Adm/TipoFuncExcluir/@item.Id">Excluir Tipo de Funcionario</a>
    </td>
</tr>

    }
</table>
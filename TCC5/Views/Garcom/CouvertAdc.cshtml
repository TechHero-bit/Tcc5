<!DOCTYPE html>
@{
    ViewBag.Title = "Adicionar Couvert";
}
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adicionar Couvert</title>
</head>
<body>
    <div>
        <form class="row col-lg-3" action="/Garcom/SalvarCouvert" method="post">
            <h2 style="font-family: Impact; color: #0B5345">Adicionar Couvert</h2>

            <div class="col-lg-12">
                <label for="valor" class="form-label">Valor</label>
                <input type="text" id="valor" name="valor" class="form-control" />
            </div>
            
            <div class="col-lg-12">
                <label for="data" class="form-label">Data</label>
                <input type="datetime-local" id="data" name="data" class="form-control" />
            </div>

            <div class="col-lg-12">
                <br />
                <button class="btn btn-success" type="submit"> Salvar</button>
            </div>

        </form>

    </div>
</body>
</html>


